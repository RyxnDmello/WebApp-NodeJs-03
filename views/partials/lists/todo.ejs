<section id="todo-list-types">
  <% if(todo.progress.length === 0 && todo.completed.length === 0) { %>
  <h1 class="todo-list-types-title">
    MANAGE YOUR <%= todo.type.toUpperCase() %> TASKS
  </h1>
  <% } %>

  <article id="list">
    <%- include("./todo-progress.ejs", { todo: todo }) %>
  </article>

  <article id="list">
    <%- include("./todo-completed.ejs", { todo: todo }) %>
  </article>
</section>

<form id="todo-form" action="<%= todo.postURL %>" method="post">
  <hr class="todo-form-divider" />

  <div class="todo-form-inputs-container">
    <input
      class="todo-form-input"
      placeholder="Title"
      name="taskTitle"
      required="true"
      maxlength="25"
      type="text"
    />

    <input
      placeholder="Description"
      class="todo-form-input"
      name="taskDescription"
      required="true"
      maxlength="50"
      type="text"
    />
  </div>

  <hr class="todo-form-divider" />

  <div class="todo-form-priority-container">
    <div class="todo-form-radio-block">
      <input
        id="todo-form-radio-high"
        name="taskPriority"
        value="high"
        type="radio"
        required
      />
      <label for="todo-form-radio-high">High Priority</label>
    </div>

    <div class="todo-form-radio-block">
      <input
        id="todo-form-radio-medium"
        name="taskPriority"
        value="medium"
        type="radio"
        required
      />
      <label for="todo-form-radio-medium">Medium Priority</label>
    </div>

    <div class="todo-form-radio-block">
      <input
        id="todo-form-radio-low"
        name="taskPriority"
        type="radio"
        value="low"
        required
      />
      <label for="todo-form-radio-low">Low Priority</label>
    </div>
  </div>

  <div class="todo-form-buttons-container">
    <button
      class="todo-form-button add"
      value="AddProgressTask"
      name="taskButton"
      type="submit"
    >
      <h4 class="todo-form-button-text">Add Task</h4>
      <img class="todo-form-button-image" src="/lists/add.png" />
    </button>

    <button class="todo-form-button clear" type="reset">
      <h4 class="todo-form-button-text">Clear Details</h4>
      <img class="todo-form-button-image" src="/lists/clear.png" />
    </button>
  </div>

  <hr class="todo-form-divider" />

  <div class="todo-form-progress-bar-container">
    <div class="todo-form-progress-bar">
      <div class="todo-form-progress-bar-fill"></div>
    </div>

    <div class="todo-form-progress-bar-details">
      <h4 class="todo-form-progress-bar-text">Empty List</h4>
      <h4 class="todo-form-progress-bar-percentage">0% Completed</h4>
    </div>
  </div>
</form>
